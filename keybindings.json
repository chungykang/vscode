// /Users/username/Library/Application Support/Code/User/keybindings.json
// Place your key bindings in this file to override the defaults

[
  {
    "key": "ctrl+a",
    "command": "editor.action.insertSnippet",
    "when": "editorHasSelection && editorTextFocus",
    "args": { "snippet": "<a href=\"link_to\">$TM_SELECTED_TEXT</a>" },
    "description": "This will place the selected text between <a href='link_to'></a> Tags"
  },
  {
    "key": "ctrl+d",
    "command": "editor.action.insertSnippet",
    "when": "editorHasSelection && editorTextFocus",
    "args": {
      "snippet": "<div ${1|id=\"\",class=\"\"|}>$TM_SELECTED_TEXT</div>"
    },
    "description": "This will place the selected text between <div></div> Tags"
  },
  {
    "key": "ctrl+p",
    "command": "editor.action.insertSnippet",
    "when": "editorHasSelection && editorTextFocus",
    "args": { "snippet": "<p ${1|id=\"\",class=\"\"|}>$TM_SELECTED_TEXT</p>" },
    "description": "This will place the selected text between <p></p> Tags"
  },
  {
    "key": "ctrl+l",
    "command": "editor.action.insertSnippet",
    "when": "editorHasSelection && editorTextFocus",
    "args": {
      "snippet": "<li>$TM_SELECTED_TEXT</li>"
    },
    "description": "This is just a test"
  },
  {
    "key": "ctrl+s",
    "command": "editor.action.insertSnippet",
    "when": "editorHasSelection && editorTextFocus",
    "args": {
      "snippet": "<span ${1|id=\"\",class=\"\"|}>$TM_SELECTED_TEXT</span>"
    },
    "description": "This will place the selected text between <span></span> Tags"
  }
]
